<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jegede.ba.BA5Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textSize="26sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:id="@+id/cont"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME TO THE OFFICIAL CONTACT US PAGE OF THE NEXUS MOBILE"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:id="@+id/cont_u"
        android:layout_below="@id/cont"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" YOU CAN CONTACT US ON THE FOLLOWING NUMBERS
    +2340000000000 OR +2341111111111
    OR EMAIL US AT theNexusgroup.org
    Find us on facebook, linked in, instagram, twitter  @theNexusgroup

    NEXUS BANK YOUR BANK OF FIRST CHOICE. SPONSORED BY NEXUS BANK YOUR BANK OF FIRST CHOICE.
@2018 NEXUS MOBILE ALL RIGHTS reserved
"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:id="@+id/cont_su"
        android:layout_below="@id/cont_u"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="NEXUSmobile"
        android:layout_centerInParent="true"
        android:id="@+id/txText"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/txText"
        android:paddingLeft="4sp"
        android:text="GET HELP"/>



</RelativeLayout>
